<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Complete properties"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp"
        android:gravity="center"
        android:elevation="2dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:textSize="14sp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginTop="15dp"
        android:id="@+id/textInputLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:hint="Enter Name" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textInputLayout"
        android:layout_alignStart="@+id/textInputLayout"
        android:layout_below="@+id/textInputLayout"
        android:layout_alignRight="@+id/textInputLayout"
        android:layout_alignEnd="@+id/textInputLayout"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bc_green"
            android:clickable="true"
            android:id="@+id/color"
            android:layout_margin="7.5dp">

            <TextView
                android:text="@string/tick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/choise"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bc_red"
            android:id="@+id/view1"
            android:clickable="true"
            android:layout_margin="7.5dp">

            <TextView
                android:text="@string/tick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/choise2"
                android:gravity="center"
                android:textSize="24sp"
                android:visibility="gone"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bc_blue"
            android:id="@+id/view2"
            android:clickable="true"
            android:layout_margin="7.5dp">

            <TextView
                android:text="@string/tick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/choise3"
                android:gravity="center"
                android:textSize="24sp"
                android:visibility="gone"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/bc_purple"
            android:id="@+id/view3"
            android:clickable="true"
            android:layout_margin="7.5dp">

            <TextView
                android:text="@string/tick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/choise4"
                android:gravity="center"
                android:textSize="24sp"
                android:visibility="gone"

                android:textColor="@android:color/white" />
        </RelativeLayout>






    </LinearLayout>

    <TextView
        android:text="@string/add_category"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:id="@+id/confirm" />
</RelativeLayout>